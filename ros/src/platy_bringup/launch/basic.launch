<?xml version="1.0"?>
<launch>

  <node pkg="platy_driver" type="odrive_node.py" name="motor_driver" output="screen">
    <rosparam command="load" file="$(find platy_bringup)/params/odrive.yaml" />
  </node>
  
  <node pkg="joy" type="joy_node" name="joystick">
    <rosparam command="load" file="$(find platy_bringup)/params/joystick.yaml" />
  </node>
  
  <node pkg="teleop_twist_joy" name="teleop" type="teleop_node">
    <rosparam command="load" file="$(find platy_bringup)/params/teleop.yaml" />
  </node>

</launch>
